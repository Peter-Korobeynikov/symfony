{% extends 'base.html.twig' %}

{% block title %}Товар{% endblock %}

{% block body %}
    <h1><strong>Товар</strong></h1>
    <hr />

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>EId</th>
                <td>{{ product.eId }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index') }}">Назад</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}">Редактировать</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
