{% extends 'base.html.twig' %}

{% block title %}Товары{% endblock %}

{% block body %}
    <h1><strong>Товары</strong></h1>
    <hr />

    <a href="{{ '/main' }}">Главная</a>
    <a href="{{ '/category' }}">Категории</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Price</th>
                <th>EId</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for product in pagination %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.title }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.eId }}</td>
                <td>
                    <a href="{{ path('product_show', {'id': product.id}) }}">Показать</a>
                    <a href="{{ path('product_edit', {'id': product.id}) }}">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Записей не найдено</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ knp_pagination_render(pagination) }}

    <a href="{{ path('product_new') }}">Создать</a>
{% endblock %}
